@model TennisObjects.Match

@{
	ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)

	<fieldset>
		<legend>Match</legend>

		@Html.HiddenFor(model => model.ID)

		<div class="editor-label">
			@Html.LabelFor(model => model.EventID)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.EventID)
			@Html.ValidationMessageFor(model => model.EventID)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.WinnerID)
		</div>
		<div class="editor-field">
			@Html.DropDownListFor(model => model.WinnerID, (IEnumerable<SelectListItem>)ViewBag.WinnerID )
			@Html.ValidationMessageFor(model => model.WinnerID)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.LoserID)
		</div>
		<div class="editor-field">
			@Html.DropDownListFor(model => model.LoserID, (IEnumerable<SelectListItem>)ViewBag.LoserID )
			@Html.ValidationMessageFor(model => model.LoserID)
		</div>

		@for (int i = 0; i < 5; i++)
		{
			<div class="set-scores">
				@Html.TextBoxFor(model => model.Score.Sets[i].WGames)
				@Html.TextBoxFor(model => model.Score.Sets[i].LGames)
				<span>(</span>
				@Html.TextBoxFor(model => model.Score.Sets[i].WTiebreak)
				@Html.TextBoxFor(model => model.Score.Sets[i].LTiebreak)
				<span>)</span>
			</div>
		}
		<p>
			<input type="submit" value="Save" />
		</p>
	</fieldset>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
